{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "utils/models/auth.js",
    "utils/config/dbConfig.js",
    "components/Provider.jsx",
    "app/page.jsx",
    "tailwind.config.js",
    "app/api/register/route.js",
    "app/layout.jsx",
    "app/signup/page.jsx",
    "app/api/auth/[...nextauth]/route.js"
, "app/(root)/dashboard/page.jsx"  ],
  "exclude": ["node_modules"]
}
